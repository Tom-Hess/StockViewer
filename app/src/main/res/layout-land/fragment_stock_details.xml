<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.temple.stockviewer.StockDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/stockImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/companyName"
            android:layout_alignParentStart="true"
            android:src="@android:color/background_light" />

        <TextView
            android:id="@+id/companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lblPrice"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:text="Company Name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lblPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stockPrice"
            android:layout_alignBottom="@+id/stockPrice"
            android:layout_marginEnd="17dp"
            android:layout_toStartOf="@+id/stockPrice"
            android:text="@string/price"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/stockPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:text="Stock Price"
            android:textSize="18sp" />

    </RelativeLayout>

</FrameLayout>
